<Window x:Class="MvvmDialogs.Demo.View.CustomDialogBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		WindowStartupLocation="CenterOwner" 
        Title="{Binding Caption}" Height="170" Width="300" ResizeMode="NoResize" >
    <Grid>
		<Grid>
			<TextBlock Text="{Binding Message}" HorizontalAlignment="Left" Margin="49,46,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="197"/>
			<Button Content="Ok" Command="{Binding OkCommand}" HorizontalAlignment="Left" Margin="171,98,0,0" VerticalAlignment="Top" Width="75" IsDefault="True" />
			<Button Content="Cancel" Command="{Binding CancelCommand}" HorizontalAlignment="Left" Margin="49,98,0,0" VerticalAlignment="Top" Width="75" />
		</Grid>
	</Grid>
</Window>
